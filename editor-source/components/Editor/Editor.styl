.editor
    fixed: top 0 left 0
    width: 100%
    height: 100%
    background: white

    &__textarea
        width: 100%
        height: 100%
        padding-bottom: 50px
        box-sizing: border-box

    &__footer
        absolute: bottom 0 left 0
        width: 100%
        height: 50px
        background: black

    &_opened_false
        display: none
