.background-screen
    background: $ui.color.seashell

    &::before,
    &::after
        content: ''
        display: block
        height: 100%
        width: 100%
        opacity: 0.25
        background-size: 100%

    &::before
        background-image: repeating-linear-gradient(45deg, white 0px, white 200px, transparent 201px, transparent 300px)

    &::after
        absolute: top 0 left 0
        background-image: repeating-linear-gradient(-45deg, white 0px, white 200px, transparent 201px, transparent 300px)

    &__canvas
        absolute: top 0 left 0
        width: 100%
        height: 100%
        pointer-events: none
        z-index: 10
        mix-blend-mode: screen
