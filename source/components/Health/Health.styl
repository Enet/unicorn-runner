.health
    width: 130px
    absolute: top 30px right 190px
    font-size: 24px
    text-align: center
    text-shadow: 2px 2px 0 $ui.color.white, -2px -2px 0 $ui.color.white, -2px 2px 0 $ui.color.white, 2px -2px 0 $ui.color.white

    &__label
        margin: 0

    &__container
        margin-top: 8px
        width: 100%
        height: 14px
        border: 2px solid $ui.color.white
        background: $ui.color.black
        font-size: 0
        border-radius: 8px

    &__value
        width: 100%
        height: 14px
        background: $ui.color.red
        box-shadow: 0 0 4px $ui.color.red
        font-size: 0
        border-radius: 7px
        transition: width $ui.transition.default

        &::after
            content: ''
            display: block
            height: 100%
            width: 100%
            border-radius: 7px
            background: linear-gradient(to bottom, rgba($ui.color.white, 0), rgba($ui.color.white, 0.25))
