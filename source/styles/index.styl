body
    background: #000
    color: #fff
    margin: 0
    padding: 0
    font-family: 'Orbitron', sans-serif
    line-height: 1

.app
    position: relative
    width: 840px

    &__canvas
        display: block


    &__header
        absolute: top 30px left 30px
        opacity: 0.4
        margin: 0
        padding: 0

.score
    absolute: top 30px right 50px
    text-align: center

    &__label
        margin: 0

    &__value
        margin: 0
        font-size: 32px
