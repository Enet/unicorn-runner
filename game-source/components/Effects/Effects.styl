.effects
    position: absolute
    left: 50%
    top: $ui.size.margin
    width: 0
    height: $ui.size.base

    &__effect
        absolute: top 0 left 0

        &:first-child
            transform: translateX(-125%)

        &:last-child
            transform: translateX(25%)

        &:first-child:last-child
            transform: translateX(-50%)
