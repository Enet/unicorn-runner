.locale
    absolute: bottom 0 left 50%
    margin-bottom: ($ui.size.margin / 3)
    transform: translateX(-50%)
    z-index: 10

    &__button
        position: relative
        z-index: 1

    &__space
        display: inline-block
        width: $ui.size.margin

    &__circle
        ui-circle($ui.size.base)
        absolute: top 0 left 20%
        background: $ui.color.pink
        transform: translateX(-0.5 * @width)
        transition: left $ui.transition.default

    &_en
        .locale__circle
            left: 80%
